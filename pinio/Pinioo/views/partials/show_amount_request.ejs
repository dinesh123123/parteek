            <div class="page-heading">
                <h1>Payment Request</h1>
                <ol class="breadcrumb">
                    <li><a href="/public/index">Home</a></li>
                    <li class="active">payment request</li>
                </ol>
            </div>


            <div class="panel panel-default">
            
                <div class="panel-heading"> <!--<button type="open-button" onclick="openForm()"class="btn btn-info add-new"><i class="fa fa-plus"></i><a href="/public/create_banner"> Add New</a></button>--></div>
              

           
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="myTable" class="table js-exportable">
                            
                            <thead>
                                    <tr>
                                        <th>S.No</th>
                                        <th>UserId</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Image</th>
                                        <th>Request amount</th>
                                        <th>date</th>
                                        <th>Approve</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
            <% for(var i=0; i < data.length; i++) { %>
                                   
        <tr>
         <td><%= i+1%></td>
         <td><%=data[i].id%></td>
         <td><%=data[i].name%></td>
         <td><%=data[i].email%></td>
         <td><img src="/uploads/<%=data[i].image%>"alt="img"style="height:55px;weight:55px;border-radius: 50%;"></td>
          <td><%=data[i].amount%></td>
          <td><%=data[i].date%></td>

          <td>
          <% if(data[i].status==0) { %>
         <a href="/public/payment_approve/<%=data[i].user_id%>"  class="btn btn-success" >Approve</a>
          <% } else { %>
          <a href=""  class="btn btn-warning" >Approved</a>

          <% } %>
        </td>




          <td><a href ="/public/amount_request_delete/<%= data[i].request_id%>"class="btn btn-circle  btn-lg  btn-danger"><i class="fa fa-trash"></i></a></td>
                                        </tr>
                                        <% } %>
                               </tbody> 
                        
                            </table>
                        </div>
                    </div>
                </div>
                <!-- #END# Task data -->
